<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <script src="https://kit.fontawesome.com/83fa5e2577.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
    <% if user_signed_in? %>
      <li class="list-unstyled">
        <%= link_to 'Bookers', root_path, class: "nav-link text-light navbar-brand" %>
      </li>

      <ul class="navbar-nav ml-auto"><!--ml-auto：右詰め-->
      <li class="list-unstyled">
        <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
        <i class="fas fa-home"></i> Home
        <% end %>
      </li>
      <li class="list-unstyled">
        <%= link_to users_path, class: "nav-link text-light" do %>
        <i class="fas fa-users"></i> Users
        <% end %>
      </li>
      <li class="list-unstyled">
        <%= link_to books_path, class: "nav-link text-light" do %>
        <i class="fas fa-book-open"></i> Books
        <% end %>
      </li>
      <li class="list-unstyled">
        <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
        <i class="fas fa-sign-out-alt"></i> Log out
        <% end %>
      </li>
      </ul>
    <% else %>
      <li class="list-unstyled">
        <%= link_to root_path, class: "nav-link text-light navbar-brand" do %>
        Bookers
        <% end %>
      </li>

      <ul class="navbar-nav ml-auto"><!--ml-auto：右詰め-->
      <li class="list-unstyled">
        <%= link_to root_path, class: "nav-link text-light" do %>
        <i class="fas fa-home"></i> Home
        <% end %>
      </li>
      <li class="list-unstyled">
        <%= link_to home_about_path, class: "nav-link text-light" do %>
        <i class="fas fa-link"></i>About
        <% end %>
      </li>
      <li class="list-unstyled">
        <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
        <i class="fas fa-user-plus"></i> Sign up
        <% end %>
      </li>
      <li class="list-unstyled">
        <%= link_to new_user_session_path, class: "nav-link text-light" do %>
        <i class="fas fa-sign-in-alt"></i> Log in
        <% end %>
      </li>
      </ul>
    <% end %>
    </div>
    </nav>
    </header>



    <main class="mb-auto">
      <%= flash[:notice] %>
      <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
  	    <div class="row">
    	    <div class="mx-auto">
    		    <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>

  </body>
</html>
