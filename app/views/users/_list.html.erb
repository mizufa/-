<h2>User info</h2>
<% if user.profile_image.attached? %>
<%= image_tag user.profile_image, size: "80x80" %>
<% else %>
<%= image_tag 'no_image', size: "80x80" %>
<% end %>
 <table class="table">
  <tbody>
  <tr>
  <th>name</th>
  <th><%= user.name %></th>
  </tr>
  <tr>
  <th>introduction</th>
  <th><%= user.introduction %></th>
  </tr>
  </tbody>
  </table>

  <div class="row">
  <%= link_to edit_user_path(user.id), class: "list-unstyled btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  </div>
