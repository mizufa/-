<h1>Users#show</h1>
<div class="container px-5 px-sm-0">
<div class="row">

<div class="col-md-3">
<%= render 'users/list', user: @user %><!--ユーザー詳細-->
 <%= render 'books/new', book: @book %><!--投稿フォーム_books/index.html.erbから-->
 </div>



<!-- ユーザーの投稿一覧 -->
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
      <td>
      <%= link_to user_path(@user.id) do %>
      <% if @user.profile_image.attached? %>
      <%= image_tag @user.profile_image, size: "80x80" %>
      <% else %>
      <%= image_tag 'no_image', size: "80x80" %>
      <% end %>
      <% end %>
      </td>
      <td>
      <%= link_to book_path(book.user.id) do %> <!--投稿ごとの詳細ページへ-->
        <%= book.title %>
      <% end %>
      </td>
      <td>
      <%= book.body %>
      </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
</div>